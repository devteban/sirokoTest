    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const themeToggleButton = document.getElementById('theme-toggle');
            const themeToggleIcon = document.getElementById('theme-toggle-icon');
            const html = document.querySelector('html');

            function setTheme(theme) {
                if (theme === 'dark') {
                    html.classList.add('dark');
                    themeToggleIcon.innerHTML = '<path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z" />';
                    localStorage.setItem('hs_theme', 'dark');
                } else {
                    html.classList.remove('dark');
                    themeToggleIcon.innerHTML = '<circle cx="12" cy="12" r="5" /><path d="M12 1v2" /><path d="M12 21v2" /><path d="M4.22 4.22l1.42 1.42" /><path d="M18.36 18.36l1.42 1.42" /><path d="M1 12h2" /><path d="M21 12h2" /><path d="M4.22 19.78l1.42-1.42" /><path d="M18.36 5.64l1.42-1.42" />';
                    localStorage.setItem('hs_theme', 'light');
                }
            }

            function toggleTheme() {
                if (html.classList.contains('dark')) {
                    setTheme('light');
                } else {
                    setTheme('dark');
                }
            }

            themeToggleButton.addEventListener('click', toggleTheme);

            const savedTheme = localStorage.getItem('hs_theme') || 'light';
            setTheme(savedTheme);
        });
    </script>

